<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_main">

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:background="@drawable/bg_btn"
            android:id="@+id/btn_login"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手机号登陆"
            android:textColor="#CD0000"
            android:textSize="20dp"
            android:layout_above="@id/btn_register"
            android:layout_marginBottom="15dp"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textColor="#CD0000"
            android:textSize="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/bg_btn"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_icon"
            android:layout_marginTop="150dp" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_mention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:text="其他登录方式" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp">

            <ImageButton
                android:id="@+id/btn_wx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="40dp"
                android:layout_weight="1"
                android:background="@drawable/ic_wx" />

            <ImageButton
                android:id="@+id/btn_qq"
                android:layout_marginEnd="40dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_qq" />

            <ImageButton
                android:id="@+id/btn_wb"
                android:layout_marginEnd="40dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_wb" />

            <ImageButton
                android:id="@+id/btn_wy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_wy" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="40dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <TextView
                android:id="@+id/tv_wx"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="9dp"
                android:text="微信"
                android:layout_marginEnd="40dp"/>
            <TextView
                android:id="@+id/tv_qq"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="QQ"
                android:layout_marginEnd="40dp"
                android:paddingStart="14dp"/>
            <TextView
                android:id="@+id/tv_wb"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="微博"
                android:layout_marginEnd="3dp"
                android:paddingStart="5dp"/>
            <TextView
                android:id="@+id/tv_wy"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="网易邮箱"
                android:paddingStart="30dp"/>
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>